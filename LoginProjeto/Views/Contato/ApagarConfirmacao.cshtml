@model ContatoModel
@{
    ViewData["Title"] = "Apagar Contato";
}

<div class="text-center" >
    
    <h1>
        Deseja Realmente Apagar o contato ("@Model.Nome")?
    </h1>

</div>
<div class="text-center">

    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar Exclusão</a>
    <a class="btn btn-danger" role="button"asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Deletar"> Confirmar Exclusão</a>

</div>
